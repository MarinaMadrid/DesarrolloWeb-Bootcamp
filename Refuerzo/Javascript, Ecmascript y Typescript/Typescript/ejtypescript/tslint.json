{
    "extends": "tslint:recommended",
    "rulesDirectory": [
        "node_modules/codelyzer"
    ],
    "rules": {
        "array-type": false,
        "arrow-parens": false,
        "deprecation": {
        "severity": "warn"
        },
        "import-blacklist": [
            true,
            "rxjs/Rx"
        ],
        "interface-name": false,
        "max-classes-per-file": false,
        "max-line-length": [
            true,
            140
        ],
        "no-console": false,
        "no-var-keyword": false,
        "new-parens":false,
        "prefer-const": false,
        "comment-format": false,
        "radix": false,
        "no-trailing-whitespace": false
    }
}